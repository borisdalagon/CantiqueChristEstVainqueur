<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Launcher">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">


            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:id="@+id/logo_launcher"
                android:src="@drawable/guitar" />


            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/notemusic" />


            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo_launcher"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/alike"
                android:textSize="10dp"
                android:text="@string/recueil_de_cantiques"
                android:textColor="@color/colorBlanche" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t1"
                android:text="@string/christ_est_vainqueur"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:layout_below="@+id/t2"
                android:fontFamily="@font/alike"
                android:textColor="@color/colorBlanche"/>



            <ProgressBar
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/logo_launcher"
                android:backgroundTint="@color/colorBlanche" />

        </RelativeLayout>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jesus"
            android:id="@+id/jesus"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />





</RelativeLayout>