<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlanche"
        android:id="@+id/item_card"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/logo"
                android:layout_marginLeft="6dp"
                android:layout_margin="10dp"
                android:layout_centerVertical="true">


                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_circle">

                    <TextView
                        android:id="@+id/lettre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="A"
                        android:textColor="@color/colorBlanche"
                        android:textAllCaps="true"
                        android:textSize="24dp" />


                    </RelativeLayout>








            </RelativeLayout>



            <LinearLayout
                android:id="@+id/li"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="4dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/logo"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titre_cantique"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Grand Dieu, nous te bÃ©nissons "
                    android:textColor="@color/colorNoir"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Numero de cantique :   "
                        android:textSize="12dp"
                        android:fontFamily="sans-serif" />



                    <TextView
                        android:id="@+id/numero_cantique"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:fontFamily="@font/alegreya_sans_light"
                        android:textColor="@color/colorNoir"
                        android:textSize="9dp" />




                </LinearLayout>



            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorGrisFain"/>

</LinearLayout>